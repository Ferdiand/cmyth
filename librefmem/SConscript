#!/usr/bin/python
#
# librefmem
#

Import('env')

src = [ 'alloc.c', 'debug.c' ]

static = env.StaticLibrary('refmem', src, CPPPATH = [ '../include', '.' ])
shared = env.SharedLibrary('refmem', src, CPPPATH = [ '../include', '.' ])

targets = [ static, shared ]

prefix = env['PREFIX']
env.Install(prefix + '/lib', targets)

Return('targets')
